@model List<Marksheet.ViewModels.MarksheetVM>

@{
    ViewBag.Title = "MarkSheet Edit";
}

<div class="row">
    <h2 class="text-center">Student Terminal Mark Entry </h2>
    @using (Html.BeginForm("Edit", "Marksheet", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.ValidationSummary()
        if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }
      
        <div class="col-md-4">
            <label>Terminal</label>
            @Html.DropDownList("Term", Model[0].Terminal, new { @class = "form-control", id = "ddlTerm" })
        </div>
        <div class="col-md-4">
            <label>Academic Year</label>
            @Model[0].AcedamicYearId
            @Html.DropDownList("AcedamicYearId", Model[0].AcademicYears, new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            <label>School Name</label>
            @Html.DropDownList("SchoolId", Model[0].Schools, new { @class = "form-control" })
        </div>
        <div class="col-md-12">&nbsp;</div>
        <table class="table table-bordered" id="dataTable" border="0" cellpadding="0" cellspacing="0">
            <tr>
                <th rowspan="2">Student Name</th>
                <th rowspan="2">Attendance</th>
                <th colspan="2">English</th>
                <th rowspan="2">Comp. Math</th>
                <th colspan="2">Nepali</th>
                <th colspan="2">Social Studies</th>
                <th colspan="2">Science</th>
                <th colspan="2">Health&Pop.</th>
                <th colspan="2">OBTE</th>
                <th colspan="2">Computer</th>
                @if (Model[0].Opt1HasPractical)
                {
                    <th colspan="2">@Model[0].Optional1Name</th>
                }
                else
                {
                    <th rowspan="2">@Model[0].Optional1Name</th>

                }


            </tr>
            <tr>
                <th>PR</th>
                <th>TH</th>

                <th>PR</th>
                <th>TH</th>

                <th>PR</th>
                <th>TH</th>

                <th>PR</th>
                <th>TH</th>

                <th>PR</th>
                <th>TH</th>

                <th>PR</th>
                <th>TH</th>

                <th>PR</th>
                <th>TH</th>
                @if (Model[0].Opt1HasPractical)
                {
                    <th>PR</th>
                    <th>TH</th>
                }




            </tr>
            @if (Model != null && Model.Count > 0)
            {
                int j = 0;
                foreach (var i in Model)
                {
                    <tr id="dataRow">
                        <td>@Model[j].StudentName</td>
                        <td>@Html.TextBoxFor(a => a[j].Attendance, new { @class = "form-control", id = "txtAttendance" })</td>
                        <td>@Html.TextBoxFor(a => a[j].EnglishPM, new { @class = "form-control", id = "txtEngPr" })</td>
                        <td>@Html.TextBoxFor(a => a[j].EnglishTM, new { @class = "form-control", id = "txtEng" })</td>
                        <td>@Html.TextBoxFor(a => a[j].MathTM, new { @class = "form-control", id = j + "txtMath" })</td>
                        <td>@Html.TextBoxFor(a => a[j].NepaliPM, new { @class = "form-control", id = "txtNepali" })</td>
                        <td>@Html.TextBoxFor(a => a[j].NepaliTM, new { @class = "form-control", id = "txtNepali" })</td>
                        <td>@Html.TextBoxFor(a => a[j].SocialPM, new { @class = "form-control", id = "txtSocial" })</td>
                        <td>@Html.TextBoxFor(a => a[j].SocialTM, new { @class = "form-control", id = "txtSocial" })</td>
                        <td>@Html.TextBoxFor(a => a[j].SciencePM, new { @class = "form-control", id = "txtSciencePr" })</td>
                        <td>@Html.TextBoxFor(a => a[j].ScienceTM, new { @class = "form-control", id = "txtScienceTh" })</td>
                        <td>@Html.TextBoxFor(a => a[j].HealthPM, new { @class = "form-control", id = "txtHealthPr" })</td>
                        <td>@Html.TextBoxFor(a => a[j].HealthTM, new { @class = "form-control", id = "txtHealthTh" })</td>
                        <td>@Html.TextBoxFor(a => a[j].ObtePM, new { @class = "form-control", id = "txtOBTEPr" })</td>
                        <td>@Html.TextBoxFor(a => a[j].ObteTM, new { @class = "form-control", id = "txtOBTETh" })</td>
                        <td>@Html.TextBoxFor(a => a[j].ComputerPM, new { @class = "form-control", id = "txtComputerPr" })</td>
                        <td>@Html.TextBoxFor(a => a[j].ComputerTM, new { @class = "form-control", id = "txtComputerTh" })</td>
                        @if (Model[0].Opt1HasPractical)
                        {
                            <td>@Html.TextBoxFor(a => a[j].Optional1PM, new { @class = "form-control", id = "txtOpt1Pr" })</td>
                            <td>@Html.TextBoxFor(a => a[j].Optional1TM, new { @class = "form-control", id = "txtOpt1Th" })</td>
                        }
                        else
                        {
                            <td>@Html.TextBoxFor(a => a[j].Optional1TM, new { @class = "form-control", id = "txtOpt2Pr" })</td>
                        }

                        @Html.HiddenFor(a => a[j].Id)
                        @Html.HiddenFor(a => a[j].StudentId)

                        @Html.HiddenFor(a => a[j].Opt1HasPractical)
                        @Html.HiddenFor(a => a[j].AcademicYear)
                        @Html.HiddenFor(a => a[j].School)
                        @Html.HiddenFor(a => a[j].StudentName)


                        @Html.HiddenFor(a => a[j].Term)
                        @Html.HiddenFor(a => a[j].SchoolId)
                        @Html.HiddenFor(a => a[j].AcedamicYearId)

                    </tr>
                    j++;
                }
            }
        </table>

        <div class="col-md-12 text-center">
            <input type="submit" value="Submit" class="btn btn-primary" id="btnSubmit" />
            @Html.ActionLink("Back To List", "Index", null, new { @class = "btn btn-default" })
        </div>

    }
</div>
