@model IEnumerable<Marksheet.Models.Marksheet>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="col-md-12">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

</div>
<p>
    @Html.ActionLink("MarkSheet Entry", "SelectSchool",new { }, new{ @class = "btn btn-info" }) @Html.ActionLink("MarkSheet Edit", "SelectSchoolEdit", new { }, new { @class = "btn btn-info" }) 
    @Html.ActionLink("MarkSheet Print", "SelectSchoolPrint", new { }, new { @class = "btn btn-info" }) 
</p>

<table class="table">
    <tr>
        <th>
            Student Name
        </th>
        <th>
            School
        </th>

        <th>
            Academic Year
        </th>
        <th>
            Terminal
        </th>
        <th>
            Attendance
        </th>
        <th>
            Result
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Student.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.School.SchoolName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.AcademicYear.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Term)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Attendance)
        </td>
       

        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

        @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            @Html.ActionLink("Grade Sheet", "viewgradesheet", new { id = item.Id }, new { @class = "btn btn-info" })
            @*@Html.ActionLink("Grade Sheet", "viewgradesheet", new { id = item.Id })*@
        </td>
    </tr>
}

</table>
